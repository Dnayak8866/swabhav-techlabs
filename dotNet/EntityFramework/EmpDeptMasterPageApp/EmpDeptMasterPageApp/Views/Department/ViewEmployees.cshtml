@using EmpDeptMasterPageApp.Models.EmployeeM
@model EmployeeVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewEmployees</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("Index", "Department", FormMethod.Post))
        {
            <table>
                <tr>
                    <th>Employee ID</th>
                    <th>Employee Name</th>
                    <th>Employee Job</th>
                    <th>Employee Salary</th>
                    <th>Employee DeptId</th>

                </tr>
                @{
                    int i = 0;
                    foreach (var emp in @Model.EmpList)
                    {
                        <tr>
                            <td>
                                @emp.Id
                            </td>
                            <td>
                                @emp.EmpName
                            </td>
                            <td>
                                @emp.EmpJob
                            </td>
                            <td>
                                @emp.EmpSalary
                            </td>
                            <td>
                                @emp.Department.Id
                            </td>

                           
                        </tr>
                        i++;
                    }
                }

            </table>

                    }
    </div>
</body>
</html>
